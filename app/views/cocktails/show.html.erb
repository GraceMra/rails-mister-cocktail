  <div class="banner"
  <% if @cocktail.photo.present? %>
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 200, width: 1400, crop: :fill %>')"
  <% else %>
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path "ukxjkfu32ulkqteh8uzm", height: 200, width: 1400, crop: :fill %>')"
  <% end %>>
    <div class="banner-text">
      <h2><%= @cocktail.name %></h2>
      <br>
      <%= link_to "Create a new dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary ml-2' %>
    </div>
  </div>
<div class="container">
<br>
    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <h5>Ingredient: <%= Ingredient.find(dose.ingredient_id).name %><%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %> <span class="glyphicon glyphicon-trash"></span>
            <% end %></h5>
        <h6><%= dose.description %></h6>
        <br>
      </li>
    <% end %>
    </ul>

  <hr>

<h3>Edit your cocktail</h3>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%=  f.submit class: 'btn btn-primary'%>
    <%= link_to 'Cancel', '#', class: 'btn btn-danger ml-2' %>  <% end %>
  <hr>

  <%= link_to "< Back to list", cocktails_path %>

</div>
