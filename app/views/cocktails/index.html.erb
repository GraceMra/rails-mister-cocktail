
<div class="home-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path "iqznq7hhopj2oydy3rur", height: 500, width: 1500, crop: :fill %>');">
  <div class="banner-content">
    <h1>The CocktailR</h1>
    <p>Discover and taste the best cocktails</p>
    <a class="list-inline btn btn btn-primary btn-outline-primary my-2 my-sm-0 ml-2" href="/cocktails/new">Start with a new cocktail</a>
  </div>
</div>

<div class="container">
  <br>
    <div class="row">
      <div class="container">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <% if cocktail.photo.present? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path "ukxjkfu32ulkqteh8uzm", height: 300, width: 400, crop: :fill %>')">
        <% end %>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <div class="card-link">
          <%= link_to "More info", cocktail_path(cocktail), class: "btn btn-primary"%>
          <%= link_to "Remove", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"}, class: "ml-3 text-danger btn btn-danger" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
